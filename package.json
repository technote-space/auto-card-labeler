{
  "name": "@technote-space/auto-card-labeler",
  "version": "1.3.7",
  "description": "GitHub actions that automatically labels Issues or PullRequests based on project card moves.",
  "keywords": [
    "github",
    "github actions",
    "github projects"
  ],
  "homepage": "https://github.com/technote-space/auto-card-labeler",
  "bugs": {
    "url": "https://github.com/technote-space/auto-card-labeler/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/auto-card-labeler.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "files": [
    "lib",
    "action.yml"
  ],
  "scripts": {
    "build": "tsc",
    "cover": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "release": "yarn release-ga --test",
    "test": "yarn lint && yarn cover",
    "update": "npx npm-check-updates -u && yarn install && yarn upgrade && yarn audit",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@technote-space/filter-github-action": "^0.5.17",
    "@technote-space/github-action-config-helper": "^2.0.22",
    "@technote-space/github-action-helper": "^5.2.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@technote-space/github-action-test-helper": "^0.7.2",
    "@technote-space/release-github-actions-cli": "^1.8.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nock": "^13.0.7",
    "pinst": "^2.1.6",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
