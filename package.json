{
  "name": "@technote-space/auto-card-labeler",
  "version": "2.0.7",
  "description": "GitHub actions that automatically labels Issues or PullRequests based on project card moves.",
  "keywords": [
    "github",
    "github actions",
    "github projects"
  ],
  "homepage": "https://github.com/technote-space/auto-card-labeler",
  "bugs": {
    "url": "https://github.com/technote-space/auto-card-labeler/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/auto-card-labeler.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "files": [
    "lib",
    "action.yml"
  ],
  "scripts": {
    "build": "tsc",
    "cover": "jest --coverage",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable",
    "release": "yarn release-ga --test",
    "test": "yarn lint && yarn cover",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "dependencies": {
    "@actions/core": "^1.8.2",
    "@actions/github": "^5.0.3",
    "@technote-space/filter-github-action": "^0.6.2",
    "@technote-space/github-action-config-helper": "^2.1.5",
    "@technote-space/github-action-helper": "^5.3.7",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@technote-space/github-action-test-helper": "^0.9.7",
    "@technote-space/release-github-actions-cli": "^1.9.0",
    "@types/jest": "^28.1.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-circus": "^28.1.1",
    "lint-staged": "^13.0.1",
    "nock": "^13.2.6",
    "pinst": "^3.0.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
